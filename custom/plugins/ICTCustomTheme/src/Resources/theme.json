{
  "name": "ICTCustomTheme",
  "author": "ICT AG",
  "description": {
    "en-GB": "ICT custom theme",
    "de-DE": "ICT custom thema"
  },
  "views": [
    "@Storefront",
    "@Plugins",
    "@ICTCustomTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/i-c-t-custom-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "previewMedia": "app/storefront/src/assets/defaultThemePreview.jpg",
  "configInheritance": [
    "@Storefront",
    "@ICTCustomTheme"
  ],
  "config": {
    "blocks": {
      "themeColors": {
        "label": {
          "en-GB": "ICT Theme colours",
          "de-DE": "ICT Theme-Farben"
        }
      },
      "ictBlock": {
        "label": {
          "en-GB": "ICT Block",
          "de-DE": "ICT Block"
        },
        "editable": false
      }
    },
    "sections": {
      "ictSection": {
        "label": {
          "en-GB": "ICT Section",
          "de-DE": "ICT Sektion"
        }
      }
    },
    "tabs": {
      "ictTab": {
        "label": {
          "en-GB": "ICT Tab",
          "de-DE": "ICT Tab"
        }
      }
    },
    "fields": {
      "modal-padding": {
        "label": {
          "en-GB": "Modal padding",
          "de-DE": "Modal Innenabstand"
        },
        "type": "text",
        "value": "(0, 0, 0, 0)",
        "editable": true
      },
      "navigation-fixed": {
        "label": {
          "en-GB": "Fix navigation",
          "de-DE": "Navigation fixieren"
        },
        "type": "switch",
        "value": true,
        "editable": true
      },
      "ict-single-select-field": {
        "label": {
          "en-GB": "Select a font size",
          "de-DE": "Wähle ein Schriftgröße"
        },
        "type": "text",
        "value": "24",
        "custom": {
          "componentName": "sw-single-select",
          "options": [
            {
              "value": "16",
              "label": {
                "en-GB": "16px",
                "de-DE": "16px"
              }
            },
            {
              "value": "20",
              "label": {
                "en-GB": "20px",
                "de-DE": "20px"
              }
            },
            {
              "value": "24",
              "label": {
                "en-GB": "24px",
                "de-DE": "24px"
              }
            }
          ]
        },
        "editable": true,
        "block": "ictBlock",
        "section": "ictSection"
      },
      "ict-color-brand-primary": {
        "label": {
          "en-GB": "ICT Primary colour",
          "de-DE": "Primär"
        },
        "type": "color",
        "value": "#399",
        "editable": true,
        "tab": "ictTab",
        "block": "ictBlock",
        "section": "ictSection"
      }
    }
  }
}